@page
@using SchoolJournal.Pages

@model JournalModel

@{
    ViewData["Title"] = "Journal";
}

<table class="table table-sm">
    <thead>
        <tr>
            <th>#</th>
            <th>Pupil</th>
        </tr>
    </thead>
    <tbody> 
    @for(int i = 0; i < Model.Journal.Pupils.Count; i++)
    {
        var pupil = Model.Journal.Pupils[i];
        <tr>
            <td>
               @(i + 1) 
            </td>
            
            <td>
                @pupil.FullName
            </td>
        </tr>
    }
    </tbody>

</table>
