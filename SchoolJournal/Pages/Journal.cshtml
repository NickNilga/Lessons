@page
@using SchoolJournal.Pages

@model JournalModel

@{
    ViewData["Title"] = "Journal";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.Title</h1>
        @* <p class="lead text-muted">@Model.Description</p> *@
    </div>
</section>

<div class="container py-4">
    <table class="table table-hover table-sm">
        <caption>List of pupils</caption>
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Journal.Pupils.Count; i++)
        {
            var pupil = Model.Journal.Pupils[i];
            <tr>
                <th scope="row" >@(i + 1)</th>
                <td>
                    @pupil.FirstName
                </td>
                <td>
                    @pupil.LastName
                </td>
                <td>
                    <a asp-page="PupilDetails" asp-route-id="@pupil.Id" class="btn btn-sm btn-link" role="button">
                        Info...
                    </a>
                </td>
            </tr>
        }
        </tbody>

    </table>
    
    <div class="row py-4">
        <div class="col col-12 text-right">
            <a asp-page="Index" class="btn btn-primary">
                Back
            </a>
        </div>
    </div>    
</div>
