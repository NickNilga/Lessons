@page
@using SchoolJournal.Pages

@model JournalModel

@{
    ViewData["Title"] = "Journal";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.Title</h1>
        @* <p class="lead text-muted">@Model.Description</p> *@
    </div>
</section>

<div class="container">
    <table class="table table-bordered table-hover table-sm">
        <caption>List of pupils</caption>
        <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Pupil</th>
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Journal.Pupils.Count; i++)
        {
            var pupil = Model.Journal.Pupils[i];
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@pupil.FullName</td>
            </tr>
        }
        </tbody>

    </table>
    
    <div class="row py-4">
        <div class="col col-12 text-right">
            <a asp-page="Index" class="btn btn-primary">
                Back
            </a>
        </div>
    </div>    
</div>
